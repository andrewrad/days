<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.RemoveTaskFragment">

    <Spinner
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="93dp"
        android:id="@+id/task_spinner"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/sub_task_spinner"
        android:layout_below="@id/task_spinner"
        android:layout_alignLeft="@id/task_spinner"
        android:layout_alignStart="@id/task_spinner" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Task"
        android:textAllCaps="false"
        android:id="@+id/remove_task_button"
        android:layout_marginTop="32dp"
        android:layout_below="@id/sub_task_spinner"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
